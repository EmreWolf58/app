@{
    Layout = null;
    var title = ViewBag.Title as string ?? "Admin Panel";
}


<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@title</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
@*     @RenderSection("Styles", required: false) *@ 
    </head>

    <body>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Admin Sayfası</a>

                <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                    <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
                </form>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row">
                <aside class="col-12 col-md-2 bg-light border-end min-vh-100 p-3">
                    <div class="list-group">
                        <a class="list-group-item list-group-item-action" asp-controller="AdminProducts" asp-action="Index">Products</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminOrders" asp-action="Index">Orders</a>
                    </div>
                </aside>

                <main class="col-12 col-md-10 p-4">
                @if(TempData["Success"]!= null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                @RenderBody()
            </main>
            </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
    </body>
</html>